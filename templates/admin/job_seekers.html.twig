                        <th>Comp√©tences</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for seeker in jobSeekers %}
                        <tr>
                            <td>{{ seeker.firstName }} {{ seeker.lastName }}</td>
                            <td>{{ seeker.email }}</td>
                            <td>{{ seeker.phone }}</td>
                            <td>{{ seeker.address }}</td>
                            <td>{{ seeker.education }}</td>
                            <td>{{ seeker.experience }}</td>
