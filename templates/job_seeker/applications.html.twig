{% extends 'base.html.twig' %}

{% block title %}My Applications{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .applications-container {
            display: flex;
            min-height: calc(100vh - 80px);
            background-color: var(--light-gray);
        }

        .applications-sidebar {
            width: 280px;
            background-color: white;
            box-shadow: var(--shadow);
            padding: 1.5rem;
        }

        .applications-content {
            flex: 1;
            padding: 2rem;
        }

        .applications-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        .applications-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--dark-gray);
        }

        .applications-count {
            color: var(--medium-gray);
            font-size: 0.9rem;
        }

        .status-tabs {
            display: flex;
            border-bottom: 1px solid #ddd;
            margin-bottom: 2rem;
        }

        .status-tab {
            padding: 0.8rem 1.5rem;
            cursor: pointer;
            position: relative;
            color: var(--medium-gray);
            font-weight: 500;
        }

        .status-tab.active {
            color: var(--primary-red);
        }

        .status-tab.active::after {
            content: '';
            position: absolute;
            bottom: -1px;
            left: 0;
            width: 100%;
            height: 2px;
            background-color: var(--primary-red);
        }

        .application-list {
            display: grid;
            gap: 1.5rem;
        }

        .application-card {
            background-color: white;
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: var(--shadow);
            transition: all 0.3s ease;
            border: 1px solid #eee;
        }

        .application-card:hover {
            transform: translateY(-5px);
            border-color: var(--primary-red);
        }

        .application-header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 1rem;
        }

        .application-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--dark-gray);
        }

        .application-company {
            color: var(--primary-red);
            font-weight: 500;
            margin-bottom: 0.3rem;
        }

        .application-meta {
            display: flex;
            gap: 1rem;
            color: var(--medium-gray);
            font-size: 0.9rem;
            margin-bottom: 1rem;
        }

        .application-meta-item {
            display: flex;
            align-items: center;
        }

        .application-meta-item i {
            margin-right: 0.3rem;
            font-size: 0.8rem;
        }

        .application-status {
            display: inline-block;
            padding: 0.3rem 0.8rem;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 500;
        }

        .status-applied {
            background-color: rgba(33, 150, 243, 0.1);
            color: #2196F3;
        }

        .status-review {
            background-color: rgba(255, 152, 0, 0.1);
            color: #FF9800;
        }

        .status-interview {
            background-color: rgba(156, 39, 176, 0.1);
            color: #9C27B0;
        }

        .status-offer {
            background-color: rgba(76, 175, 80, 0.1);
            color: #4CAF50;
        }

        .status-rejected {
            background-color: rgba(244, 67, 54, 0.1);
            color: #F44336;
        }

        .application-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 1rem;
            padding-top: 1rem;
            border-top: 1px solid #eee;
        }

        .application-date {
            color: var(--medium-gray);
            font-size: 0.8rem;
        }

        .application-actions {
            display: flex;
            gap: 0.5rem;
        }

        .btn-action {
            background-color: white;
            color: var(--primary-red);
            border: 1px solid var(--primary-red);
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 0.8rem;
        }

        .btn-action:hover {
            background-color: rgba(230, 57, 70, 0.1);
        }

        .empty-state {
            text-align: center;
            padding: 4rem;
            background-color: white;
            border-radius: 12px;
            box-shadow: var(--shadow);
        }

        .empty-icon {
            font-size: 3rem;
            color: var(--medium-gray);
            margin-bottom: 1rem;
        }

        .empty-title {
            font-size: 1.3rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: var(--dark-gray);
        }

        .empty-text {
            color: var(--medium-gray);
            margin-bottom: 1.5rem;
        }
    </style>
{% endblock %}

