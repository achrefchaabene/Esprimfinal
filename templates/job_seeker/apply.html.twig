{% extends 'base.html.twig' %}

{% block title %}Postuler - {{ publication.title }}{% endblock %}

{% block body %}
<div class="apply-container">
    <div class="apply-header">
        <h1>Postuler à l'offre : {{ publication.title }}</h1>
        <div class="company-info">{{ publication.user.companyName }}</div>
    </div>

    <div class="apply-form">
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.message) }}
                {{ form_widget(form.message) }}
                {{ form_errors(form.message) }}
            </div>

            <div class="form-group">
                {{ form_label(form.resumeFile) }}
                {{ form_widget(form.resumeFile) }}
                {{ form_errors(form.resumeFile) }}
                <small class="form-text text-muted">Téléchargez votre CV au format PDF (max 2Mo)</small>
            </div>

            <div class="form-actions">
                <a href="{{ path('job_seeker_job_details', {'id': publication.id}) }}" class="btn-cancel">Annuler</a>
                <button type="submit" class="btn-submit">Envoyer ma candidature</button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

